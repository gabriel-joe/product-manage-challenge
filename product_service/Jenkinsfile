pipeline {
    agent any
	environment {
	  NEXUS_HOST = 'nexus:8081'
	  SONAR_HOST = 'http://sonarqube:9000'
	  APP_VERSION = sh(returnStdout: true, script: """ echo \$(xmllint --xpath '/*[local-name()="project"]/*[local-name()="version"]/text()' product_service/pom.xml) """)
	}
    stages {
        stage('Build') {
            steps {
                dir('product_service'){
                    echo 'Clean/Build'
                    sh 'echo $APP_VERSION'
                    sh 'sudo mvn clean install -DskipTests=true -Dmaven.javadoc.skip=true -B -V'
                    echo 'Run sonar validation'
                    sh 'sudo mvn sonar:sonar -Dsonar.scm.disabled=true -Dsonar.host.url=$SONAR_HOST'
                }
            }
        }
        stage('Test') {
            steps {
                dir('product_service'){
                    echo 'Testing'
                    sh 'mvn test'
                }
            }
        }
        stage('Publish') {
            steps {
                dir('product_service'){
                    sh 'sudo mvn clean publish -Ddocker.url=http://$NEXUS_HOST -Ddocker.user=$NEXUS_USER -Ddocker.password=$NEXUS_PASSWORD'
                }
            }
        }
    }    
    post {
        success {
            echo 'Product service build finished'
            dir('product_service'){
               sh 'sudo mvn clean'
            }
            //deleteDir()
        }
        failure {
            echo 'Product service pipeline failed'
            dir('product_service'){
               sh 'sudo mvn clean'
            }
            //deleteDir()
        }
        unstable {
            echo 'Product service PIPELINE WAS MARKED AS UNSTABLE'
        }
        changed {
            echo 'Product service PIPELINE STATUS HAS CHANGED SINCE LAST EXECUTION'
        }
    }
}